{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "@shell/*": [
        "./node_modules/@rancher/shell/*"
      ],
      "@components/*": [
        "./node_modules/@rancher/components/*"
      ],
      "@kubewarden/*": [
        "./pkg/kubewarden/*"
      ]
    },
    "typeRoots": [
      "./node_modules",
      "./node_modules/@rancher/shell/types",
      "./node_modules/@rancher/components/types",
      "./pkg/kubewarden/types"
    ],
    "types": [
      "@types/node",
      "@nuxt/types",
      "@jest/types",
      "@playwright/types",
      "@rancher/components/types",
      "kubewarden",
      "cypress",
      "rancher",
      "shell"
    ]
  },
  "exclude": [
    "node_modules",
    "tests",
    "jest.config.js"
  ]
}